<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>| %16thread | %class{0} %m%n</pattern>
    </encoder>
  </appender>

  <logger name="io.netty.util" level="INFO"/>
  <logger name="io.netty.buffer" level="INFO"/>

  <root>
    <appender-ref ref="console"/>
  </root>
</configuration>
